
! Fonts
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

URxvt.font: xft:Inconsolata-11
URxvt.boldFont: xft:Inconsolata-12
URxvt.letterSpace: 0

! Hide scrollbar
URxvt.scrollBar: false

! Force term to send selection to CLIPBOARD (used by GUI) rather than PRIMARY
XTerm*selectToClipboard: true
URxvt.perl-ext-common: selection-to-clipboard

! Color palette

#define t_background        #1d1f21
#define t_current_line      #2a2a2a
#define t_selection         #424242
#define t_foreground        #eaeaea
#define t_comment           #969896
#define t_red               #d54e53
#define t_orange            #e78c45
#define t_yellow            #e7c547
#define t_green             #46b47c
#define t_aqua              #70c0b1
#define t_blue              #7aa6da
#define t_purple            #c397d8

! Theme
*.foreground:   t_foreground
*.background:   t_background
*.cursorColor:  #aeafad

! Black / Grey
*.color0:       #000000
*.color8:       #666666

! Red / Bright Red
*.color1:       t_red
*.color9:       #FF3334

! Green + Bright Green
*.color2:       t_green
*.color10:      #9ec400

! Yellow (Orange) + Bright Yellow (Yellow)
*.color3:       t_orange
*.color11:      t_yellow

! Blue + Bright Blue
*.color4:       t_blue
*.color12:      t_blue

! Magenta (Purple) + Bright Magenta
*.color5:       t_purple
*.color13:      #b777e0

! Cyan (Aqua) + Bright Cyan
*.color6:       t_aqua
*.color14:      #54ced6

! Light Grey (Selection) + White (Current Line)
*.color7:       t_selection
*.color15: t_current_line
